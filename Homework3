#4.5
 f<-flights %>%
   group_by(carrier) %>%
   select(carrier,distance) %>%
   summarise(most=max(distance), month=3, year=2013) %>%
   arrange(desc(most)) %>%
   slice_head() #most miles
 view(f)
  
 f<-flights %>%
   group_by(carrier) %>%
   select(carrier,distance) %>%
   summarise(most=max(distance), month=3, year=2013) %>%
   arrange(desc(most)) %>%
   slice_tail() #least miles
 view(f)
